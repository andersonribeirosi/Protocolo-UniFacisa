<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elfrarep.sistemadeprotocolosunifacisa.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="60dp"
            android:layout_row="0"
            android:text="Solicitar Protocolo"
            android:onClick="solicitarProtocolo"/>

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_row="1"
            android:paddingLeft="10dp"
            android:text="Acompanhar Protocolo"
            android:onClick="acompanharProtocolo"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_row="2"
            android:text="Pesquisar"
            android:onClick="pesquisarProtocolo"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_row="3"
            android:text="Cadastro"
            android:onClick="cadastro"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:layout_row="4"
            android:text="Sair"
            android:onClick="fechar"/>
    </GridLayout>
</RelativeLayout>
